<!DOCTYPE html>
<html lang="en" dir="ltr">

<head>
    <meta charset="utf-8">
    <title>Ma todolist</title>
    <style>
        h1 {
            color: red;
            background-color: black;
            text-align: center;
        }
        
        ol {
            text-decoration-style: none;
        }
        
        label {
            font-style: italic;
            font-weight: bold;
        }
        
        form {
            text-align: center;
        }
        
        .input1 {
            width: 300px;
            height: 25px;
        }
        
        .input2 {
            width: 70px;
            height: 25px;
        }
    </style>
</head>

<body>
    <h1>TodoList</h1>
    <h2>Enter a todo Item</h2>
    <ol>
        <% todolist.forEach(function(todo, index){%>
            <li><a href="/todo/suprimer/<%= index %>">‚ùå </a>
                <%= todo %>
            </li>
            <% }); %>
    </ol>

    <form class="" action="/todo/ajouter/" method="post">
        <p>
            <p>
                <label for="newtodo">Que doit-je faire ?</label>
            </p>
            <input type="text" name="newtodo" id="newtodo" class="input1" autofocus/>
            <input type="submit" class="input2" />
        </p>
    </form>
</body>

</html>